<div class="container mx-auto">
  <p class="text-green-500"><%= notice %></p>

  <h1 class="text-2xl font-bold mb-4">Posts</h1>

  <div id="posts">
    <% @posts.each do |post| %>
      <%= render post %>
      <p>
        <%= link_to "Show this post", post, class: "text-blue-500 hover:text-blue-700" %>
      </p>
    <% end %>
  </div>

  <%= link_to "New post", new_post_path, class: "text-blue-500 hover:text-blue-700 mt-4 block" %>
</div>
