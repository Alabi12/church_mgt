<div class="container mx-auto">
  <p class="text-green-500"><%= notice %></p>

  <%= render @post %>

  <div class="flex justify-between mt-4">
    <%= link_to "Edit this post", edit_post_path(@post), class: "text-blue-500 hover:text-blue-700" %>
    <%= link_to "Back to posts", posts_path, class: "text-blue-500 hover:text-blue-700" %>
    <%= button_to "Destroy this post", @post, method: :delete, class: "text-red-500 hover:text-red-700" %>
  </div>
</div>
