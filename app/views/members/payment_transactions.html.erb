<h1 class="text-3xl font-bold mb-6">Payment Transactions for <%= @member.first_name %> <%= @member.last_name %></h1>

<div class="overflow-x-auto">
  <table class="table-auto w-full border-collapse border border-gray-300">
    <thead>
      <tr class="bg-gray-200">
        <th class="px-4 py-2">Amount</th>
        <th class="px-4 py-2">Payment Method</th>
        <th class="px-4 py-2">Payment Category</th>
        <!-- Add more headers if needed -->
      </tr>
    </thead>
    <tbody>
      <% @payments.each do |payment| %>
        <tr>
          <td class="border px-4 py-2"><%= payment.amount %></td>
          <td class="border px-4 py-2"><%= payment.payment_method %></td>
          <td class="border px-4 py-2"><%= payment.payment_category %></td>
          <!-- Add more columns if needed -->
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
