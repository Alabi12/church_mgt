<div class="max-w-lg mx-auto bg-white shadow-md rounded-lg overflow-hidden">
  <div class="px-4 py-2 bg-gray-200">
    <h3 class="text-lg font-semibold text-gray-800">Member Details</h3>
  </div>
  <div class="p-4">
    <table class="w-full">
      <tr>
        <td class="px-4 py-2 text-sm font-semibold text-gray-700">First Name:</td>
        <td class="px-4 py-2 text-sm text-gray-600"><%= @member.first_name %></td>
      </tr>
      <tr>
        <td class="px-4 py-2 text-sm font-semibold text-gray-700">Last Name:</td>
        <td class="px-4 py-2 text-sm text-gray-600"><%= @member.last_name %></td>
      </tr>
      <tr>
        <td class="px-4 py-2 text-sm font-semibold text-gray-700">Group: <%= @member.group %></td>
      </tr>
    </table>
  </div>
</div>
