<nav class="bg-gray-800 text-white py-4">
  <div class="container mx-auto flex justify-between items-center px-4">
    <h2 class="text-2xl font-bold">Payment</h2>
    <%= link_to "Back to members", members_path, class: "ml-4 text-blue-500 hover:text-blue-700" %>
    <%= link_to "New member", new_member_path, class: "text-blue-500 font-bold" %>
    <%= link_to "Back to Churches", churches_path, class: "text-blue-500 font-bold" %>
  </div>
</nav>

<div class="max-w-xl mx-auto">
  <%= form_with(model: [@member, @payment], url: member_payments_path(@member), class: "bg-white rounded-lg shadow-md p-4 mt-4") do |form| %>
    <div class="mb-4">
      <%= form.label :amount, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :amount, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-4">
      <%= form.label :payment_method, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.select :payment_method, ['Cash', 'Momo'], class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-4">
      <%= form.label :payment_category, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.select :payment_category, ['Tithes', 'Harvest', 'Special_Offering', 'Pledge'], class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <%= form.hidden_field :member_id, value: @member.id %>

    <div class="mb-4">
      <%= form.submit "Submit", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>
</div>
